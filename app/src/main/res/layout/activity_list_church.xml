<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ListChurch">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:fitsSystemWindows="true"
        android:background="@color/cardview_dark_background"
        android:theme="@style/AppTheme.PopupOverlay">

            <LinearLayout
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:text="Find your church"
                    android:textSize="40dp"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/editText"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="57dp"
                    android:layout_width="250dp"
                    android:layout_height="31dp"
                    android:shadowColor="@color/cardview_light_background"
                    android:background="@drawable/rounded_textbox"
                    android:ems="10"
                    android:hint="GPIB PAULUS"
                    android:gravity="start|top"
                    android:drawableLeft="@drawable/ic_search_24px"
                    android:inputType="text" />
            </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <include layout="@layout/content_list_church" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>